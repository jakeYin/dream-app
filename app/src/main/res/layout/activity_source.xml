<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/bolck_titlebar"
        layout="@layout/view_sear_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorMain">

        <android.support.design.widget.TabLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tab_sources"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabBackground="@null"
            app:tabIndicatorHeight="0dp"
            app:tabMaxWidth="200dp"
            app:tabMinWidth="16dp"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/tab_index_common"
            app:tabTextColor="@color/trwhite" />
    </FrameLayout>
    <View style="@style/divider_line_normal"></View>
    <android.support.v4.view.ViewPager
        android:id="@+id/source_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>